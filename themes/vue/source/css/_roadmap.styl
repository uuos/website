$width = 900px

.r-banner
    background:url(/images/banner_2.jpg) no-repeat
    background-size:cover
    padding-bottom: 34%
@media screen and (max-width: $width)
    .r-banner
        margin-top: 40px


@media screen and (min-width: $width)
    .roadmap
        padding: 0 110px
        background: #f2f2f2
        
        h2
            margin-left: 20px
            width: 180px
            background: #0686D8
            color: #fff !important  
            text-align: center
            border-radius: 10px
            height: 60px
            line-height: 60px
        .step-txt
            margin-top: 0
        .step-list1
            display: flex
            align-items: center
        .line2 
            background: #BFBFBF
            width: 1px
            height: 100%
            position: absolute
            left: 185px
            margin-top: 25px
        .line1
            background: #BFBFBF
            width: 1px
            height: 100%
            position: absolute
            left: 183px
            margin-top: 25px
        .line3
            width:100%
            height: 2px
            background: #000
            margin-bottom: 20px
        .dateline
            width: 160px
            font-size: 18px
            color: #666
            font-weight: bold
            flex-shrink: 0
        .left
            width: 20px
        .square
            background: #50CDF0
            border-radius: 50%
            width: 20px;
            height: 20px
        .txt-list span
            color: #50CDF0
        .right
            border-radius: 10px
            background: #fff
            padding: 20px 32px
            margin-left: 50px
            position: relative
            &:after
                content: ''
                position: absolute
                width: 0  
                height: 0
                border: 15px solid #f2f2f2
                border-right-color: #fff
                left: -30px
                top: 42%