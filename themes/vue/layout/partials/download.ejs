<div id="intro">
    <div class="intro-content">
        <div class="intro-content-l hidden-xs imgsize"><img src="<%- url_for("/images/people.png") %>"></div>
        <div class="intro-content-r">
            <div class="item-1">
                <div class="item-1-img">
                    <img src="<%- url_for("/images/logo_download.png") %>">
                </div>
                <div class="title-text">UUOS Wallet</div>
                <div class="content-text">Download for mobile</div>
            </div>
            <div class="item-2">
                <div class="download">
                    <div class="dlbutton" id="ios"><i class="fa fa-apple fa-2x"></i><a href="#">Download for iPhone</a></div>
                    <div class="dlbutton" id="android"><i class="fa fa-android fa-2x"></i><a href="#">Download for Android</a></div>
                </div>
                <div class="QRcode">
                    <img id="qrcode" src="<%- url_for("/images/QRcode.png") %>">
                </div>
            </div>
        </div>
    </div>
    <div class="ellipse"></div>
    <div class="intro-content-b">        
        <a href="<%- url_for("/download.html") %>" class="switch-download"><img class="fa" src="<%- url_for("/images/mp_normal.png") %>">Download for Mobile</a>
        <a href="<%- url_for("/download_pc.html") %>" class="switch-download button-blue"><img class="fa" src="<%- url_for("/images/pc_down.png") %>">Download for PC</a>
    </div>
</div>

<script>
    var oDov1 = document.getElementById('ios');
    var oDov2 = document.getElementById('android');
    var oDov3 = document.getElementById('qrcode');
    oDov1.onmouseover = function(){                
        oDov3.src = "<%- url_for('/images/QRcode.png') %>";
    }
    oDov1.onclick = function(){                
        oDov3.src = "<%- url_for('/images/QRcode.png') %>";
    }
    oDov2.onmouseover = function(){                
        oDov3.src = "<%- url_for('/images/logo_download.png') %>";
    }
    oDov2.onclick = function(){                
        oDov3.src = "<%- url_for('/images/logo_download.png') %>";
    }

</script>